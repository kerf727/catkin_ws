<?xml version="1.0"?>
<launch>
  <arg name="paused" default="true"/>
  <arg name="gazebo_gui" default="true"/>
  <arg name="urdf_path" default="$(find hexapod_description)/urdf/hexapod.urdf"/>

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find hexapod_gazebo)/worlds/empty_world.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <param name="robot_description" textfile="$(arg urdf_path)" />

  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param robot_description -model robot -x 0 -y 0 -z 0
              -J joint_hip1_L1 0.0 -J joint_hip2_L1 0.5 -J joint_knee_L1 0.0
              -J joint_hip1_R1 0.0 -J joint_hip2_R1 0.5 -J joint_knee_R1 0.0
              -J joint_hip1_L2 0.0 -J joint_hip2_L2 0.5 -J joint_knee_L2 0.0
              -J joint_hip1_R2 0.0 -J joint_hip2_R2 0.5 -J joint_knee_R2 0.0
              -J joint_hip1_L3 0.0 -J joint_hip2_L3 0.5 -J joint_knee_L3 0.0
              -J joint_hip1_R3 0.0 -J joint_hip2_R3 0.5 -J joint_knee_R3 0.0 "
    respawn="false" output="screen" />

  <include file="$(find hexapod_config)/launch/hexapod_control.launch"/>

</launch>
